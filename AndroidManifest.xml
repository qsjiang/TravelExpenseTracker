            android:name="ca.ualberta.cs.travelexpensetracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelexpensetracker.ClaimCreationActivity"
            android:label="@string/title_activity_claim_creation" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelexpensetracker.ClaimActivity"
            android:label="@string/title_activity_claim" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelexpensetracker.ExpenseActivity"
            android:label="@string/title_activity_expense" >
        </activity>
    </application>

</manifest>
